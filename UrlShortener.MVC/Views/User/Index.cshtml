@model IEnumerable<UrlShorter.BLL.Models.GetUsersResponse>

@{
    ViewData["Title"] = "Users";
}

<h1>Users list</h1>

<h1>Users</h1>
<form asp-action="Index">
    <p><input type="text" name="name" /> Name</p>
    <p><input type="date" name="minRegistrationDateTime" /> Min registration date</p>
    <p><input type="date" name="maxRegistrationDateTime" /> Max registration date</p>
    <p><input type="submit" value="Search" /></p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, name = item.Name }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, name = item.Name })
            </td>
        </tr>
}
    </tbody>
</table>
